# governance-api/.env.local — secrets only (never committed)
# The base config (.env) is a symlink to config/generated/env.api
# This file overrides/supplements with secrets and local settings.

# Database credentials
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
# Override full URL if needed (takes priority over constructed URL):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trustful_governance_sepolia

# Pinata (IPFS) — server-side only, never expose to frontend
PINATA_API_KEY=
PINATA_SECRET_KEY=

# AWS SES
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
FROM_EMAIL=noreply@trustful-agents.ai

# JWT
JWT_SECRET=change-me-in-production

# CORS (override if needed — default comes from generated env)
# CORS_ORIGIN=https://governance.trustful-agents.ai,https://provider.trustful-agents.ai,https://claims.trustful-agents.ai,https://council.trustful-agents.ai

# Domain for SIWE
# DOMAIN=localhost
