# Trustful Agents - Contract Deployment Configuration
# Copy to .env and fill in values

# =============================================================================
# Required
# =============================================================================

# Deployer private key (without 0x prefix)
export DEPLOYER_PRIVATE_KEY=

# RPC URLs
export RPC_URL_BASE_SEPOLIA=https://sepolia.base.org
export RPC_URL_BASE_MAINNET=https://mainnet.base.org

# For verification
export BASESCAN_API_KEY=

# =============================================================================
# Optional - External Contracts (deploys mocks if not set)
# =============================================================================

# Use existing USDC contract (leave empty to deploy mock)
# export USDC_ADDRESS=

# Use existing ERC-8004 registry (leave empty to deploy mock)
# export ERC8004_REGISTRY_ADDRESS=

# =============================================================================
# Optional - Configuration
# =============================================================================

# Withdrawal grace period in seconds (default: 7 days = 604800)
# export WITHDRAWAL_GRACE_PERIOD=604800

# Minimum collateral in USDC units (default: 100 USDC = 100000000)
# export MIN_COLLATERAL_AMOUNT=100000000

# Base URI for validation responses
# export VALIDATION_BASE_URI=https://trustful.ai/v/
